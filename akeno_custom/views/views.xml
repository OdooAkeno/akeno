<odoo>
  <data>
    <record id="product_template_form_akeno_view" model="ir.ui.view">
            <field name="name">product.template.form.akeno.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">6</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <page name="variants" position="after">
                    <page string="Gaz Filter" name="akenofilter" groups="account.group_account_invoice">
                    <group>
                        <group>
                            <field name="product_default"/>
                        </group>
                        <group>
                            <field name="consignation_12"/>
                        </group>
                        <group>
                            <field name="consignation_25"/>
                        </group>
                        <group>
                            <field name="deconsignation_12"/>
                        </group>
                        <group>
                            <field name="deconsignation_25"/>
                        </group>
                        <group>
                            <field name="gaz"/>
                        </group>
                    </group>
                    </page>
                </page>
            </field>
        </record>



      <record id="invoice_form_akeno" model="ir.ui.view">
            <field name="name">account.move.akeno.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="currency_id" position="after">      
                          <field name="type_b"  sequence="20"/>
                </field>
                
                <field name="currency_id" position="after">      
                          <field name="quantity_decon"  sequence="21"/>
                </field>

                <field name="currency_id" position="after">      
                          <field name="quantity_gaz"  sequence="22"/>
                </field>
                
            </field>
        </record>
  </data>
</odoo>